@model AcademIQ.Models.Enrollments

@{
    ViewData["Title"] = "Create Enrollment";
}

<h1>Create Enrollment</h1>

<h4>Enrollments</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Student Selection -->
            <div class="form-group">
                <label asp-for="StudentId" class="control-label"></label>
                <select asp-for="StudentId" class="form-control" asp-items="ViewBag.StudentId">
                    <option value="">Select a Student</option> <!-- Default option -->
                </select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>

            <!-- Course Selection -->
            <div class="form-group">
                <label asp-for="CourseId" class="control-label"></label>
                <select asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseId">
                    <option value="">Select a Course</option> <!-- Default option -->
                </select>
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>

            

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Join Course" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<!-- Link Back to the List -->
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
